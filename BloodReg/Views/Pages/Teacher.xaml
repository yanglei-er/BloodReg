<Page
    x:Class="BloodReg.Views.Pages.Teacher"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:BloodReg.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:BloodReg.Extensions"
    xmlns:local="clr-namespace:BloodReg.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:ws="https://schemas.elecho.dev/wpfsuite"
    Title="Teacher"
    d:DataContext="{d:DesignInstance local:Teacher,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="700"
    d:DesignWidth="1180"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToAppearanceConverter x:Key="BoolToAppearanceConverter" />
        <converters:StringToDonationVolumeConverter x:Key="StringToDonationVolumeConverter" />
        <Style BasedOn="{StaticResource MyButtonStyle}" TargetType="ui:Button" />
    </Page.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2.5*" />
        </Grid.ColumnDefinitions>
        <TextBox Name="XuNiBox" Width="0" />
        <Border
            Grid.Column="0"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            CornerRadius="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ws:ScrollViewer
                    Grid.Row="0"
                    Margin="8,8,8,0"
                    ws:StylusTouchDevice.Simulate="True"
                    PanningMode="Both">
                    <StackPanel Margin="0,0,12,0">
                        <ui:TextBlock FontSize="32" Text="姓名：" />
                        <ui:TextBox
                            x:Name="NameBox"
                            Margin="0,8,0,0"
                            BorderThickness="0"
                            FontSize="24"
                            PreviewKeyDown="NameBox_PreviewKeyDown"
                            Text="{Binding ViewModel.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <ui:TextBlock
                            Margin="0,8,0,0"
                            FontSize="32"
                            Text="献血量：" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBox
                                x:Name="DonationVolumeBox"
                                Grid.Column="0"
                                Margin="0,8,0,0"
                                extensions:TextBoxAttachedProperties.IsOnlyNumber="True"
                                BorderThickness="0"
                                FontSize="24"
                                PreviewKeyDown="DonationVolumeBox_PreviewKeyDown"
                                Text="{Binding ViewModel.DonationVolume, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDonationVolumeConverter}}" />
                            <ui:TextBlock
                                Grid.Column="1"
                                Margin="6,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="32"
                                Text="ml" />
                        </Grid>
                        <ui:TextBlock
                            Margin="0,8,0,0"
                            FontSize="32"
                            Text="工号：" />
                        <ui:TextBox
                            x:Name="EmployeeIDBox"
                            Margin="0,8,0,0"
                            extensions:TextBoxAttachedProperties.IsOnlyNumber="True"
                            BorderThickness="0"
                            FontSize="24"
                            PreviewKeyDown="EmployeeIDBox_PreviewKeyDown"
                            Text="{Binding ViewModel.EmployeeID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <ui:TextBlock
                            Margin="0,8,0,0"
                            FontSize="32"
                            Text="手机号：" />
                        <ui:TextBox
                            x:Name="PhoneNumberBox"
                            Margin="0,8,0,0"
                            extensions:TextBoxAttachedProperties.IsOnlyNumber="True"
                            BorderThickness="0"
                            FontSize="24"
                            PreviewKeyDown="PhoneNumberBox_PreviewKeyDown"
                            Text="{Binding ViewModel.PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <ui:TextBlock
                            Margin="0,8,0,0"
                            FontSize="32"
                            Text="银行卡号：" />
                        <ui:TextBox
                            x:Name="AccountNumberBox"
                            Margin="0,8,0,0"
                            extensions:TextBoxAttachedProperties.IsOnlyNumber="True"
                            BorderThickness="0"
                            FontSize="24"
                            PreviewKeyDown="AccountNumberBox_PreviewKeyDown"
                            Text="{Binding ViewModel.AccountNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <ui:TextBlock
                            Margin="0,8,0,0"
                            FontSize="32"
                            Text="开户支行：" />
                        <ui:TextBox
                            x:Name="AccountBankBox"
                            Margin="0,8,0,0"
                            BorderThickness="0"
                            FontSize="24"
                            PreviewKeyDown="AccountBankBox_PreviewKeyDown"
                            Text="{Binding ViewModel.AccountBank, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </ws:ScrollViewer>
                <StackPanel
                    Grid.Row="1"
                    Margin="8,32,8,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom">
                    <ui:TextBlock FontSize="32" Text="录入人：" />
                    <ui:TextBox
                        x:Name="ClerkBox"
                        Margin="0,8,0,0"
                        BorderThickness="0"
                        FontSize="24"
                        PreviewKeyDown="ClerkBox_PreviewKeyDown"
                        Text="{Binding ViewModel.Clerk, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <ui:Button
                        Margin="0,12,0,8"
                        HorizontalAlignment="Stretch"
                        Appearance="Primary"
                        Click="AddButton_Click"
                        Content="添加"
                        FontSize="32" />
                </StackPanel>
            </Grid>
        </Border>
        <Border
            Grid.Column="1"
            Margin="12,0,0,0"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            CornerRadius="4">
            <Grid Margin="8,8,8,6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <ui:TextBox
                        Grid.Column="0"
                        FontSize="18"
                        Icon="{ui:SymbolIcon Search24}"
                        IconPlacement="Right"
                        PlaceholderText="快速查找姓名、工号"
                        PreviewKeyDown="SearchBox_PreviewKeyDown"
                        Text="{Binding ViewModel.SearchBoxText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=500}" />
                </Grid>
                <ui:DataGrid
                    x:Name="DataGrid"
                    Grid.Row="1"
                    Margin="0,12,0,0"
                    d:ItemsSource="{d:SampleData ItemCount=15}"
                    AutoGenerateColumns="False"
                    BeginningEdit="DataGrid_BeginningEdit"
                    BorderBrush="{DynamicResource TextFillColorSecondaryBrush}"
                    BorderThickness="0.1"
                    CanUserAddRows="False"
                    EnableColumnVirtualization="True"
                    EnableRowVirtualization="True"
                    FontSize="16"
                    HorizontalScrollBarVisibility="Disabled"
                    ItemsSource="{Binding ViewModel.DataGridItems, Mode=TwoWay}"
                    RowEditEnding="DataGrid_RowEditEnding"
                    RowHeaderWidth="0"
                    ScrollViewer.CanContentScroll="True"
                    SelectionMode="Single"
                    SelectionUnit="FullRow"
                    VirtualizingPanel.IsContainerVirtualizable="True"
                    VirtualizingPanel.IsVirtualizing="True"
                    VirtualizingPanel.VirtualizationMode="Recycling">
                    <ui:DataGrid.ColumnHeaderStyle>
                        <Style BasedOn="{StaticResource DefaultDataGridColumnHeaderStyle}" TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </ui:DataGrid.ColumnHeaderStyle>
                    <ui:DataGrid.Columns>
                        <DataGridTextColumn
                            Width="0.6*"
                            Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            CanUserSort="False"
                            ElementStyle="{StaticResource CenterAlignmentStyle}"
                            Header="姓名" />
                        <DataGridTextColumn
                            Width="0.9*"
                            Binding="{Binding EmployeeID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            CanUserSort="False"
                            ElementStyle="{StaticResource CenterAlignmentStyle}"
                            Header="工号" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            CanUserSort="False"
                            ElementStyle="{StaticResource CenterAlignmentStyle}"
                            Header="手机号" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding AccountNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            CanUserSort="False"
                            ElementStyle="{StaticResource CenterAlignmentStyle}"
                            Header="银行卡号" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding AccountBank, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            CanUserSort="False"
                            ElementStyle="{StaticResource CenterAlignmentStyle}"
                            Header="开户支行" />
                        <DataGridTextColumn
                            Width="0.4*"
                            Binding="{Binding DonationVolume, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            CanUserSort="False"
                            ElementStyle="{StaticResource CenterAlignmentStyle}"
                            Header="献血量" />
                        <DataGridTemplateColumn
                            Width="58"
                            CanUserResize="False"
                            CanUserSort="False"
                            Header="操作">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:Button
                                        Margin="2,0,2,0"
                                        Command="{Binding ElementName=DataGrid, Path=DataContext.ViewModel.DelCommand, Mode=OneWay}"
                                        CommandParameter="{Binding ElementName=DataGrid, Path=SelectedItem}"
                                        Style="{StaticResource RemoveButton}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </ui:DataGrid.Columns>
                </ui:DataGrid>
                <Grid Grid.Row="1" Visibility="{Binding ViewModel.DatabaseEmpty, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel
                        Margin="0,32,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <ui:Image
                            Width="140"
                            Height="140"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="/Assets/databaseEmpty.png" />
                        <ui:TextBlock
                            Margin="0,12,0,0"
                            FontSize="32"
                            FontTypography="Title"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="什么都没有 ┑(￣Д ￣)┍" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="2" Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <ui:TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Text="共" />
                        <ui:TextBlock
                            Margin="4,0,4,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Text="{Binding ViewModel.TotalCount, Mode=OneWay}" />
                        <ui:TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Text="条" />
                        <ui:TextBlock
                            Margin="12,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Text="每页" />
                        <ComboBox
                            Height="32"
                            Margin="4,0,4,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding ViewModel.IsBottombarEnabled, Mode=OneWay}"
                            ItemsSource="{Binding ViewModel.PageCountList, Mode=OneTime}"
                            SelectedIndex="{Binding ViewModel.DisplayIndex, Mode=TwoWay}" />
                        <ui:TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Text="条" />
                    </StackPanel>
                    <StackPanel
                        Grid.Column="1"
                        Margin="8,0,8,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        IsEnabled="{Binding ViewModel.IsBottombarEnabled, Mode=OneWay}"
                        Orientation="Horizontal">
                        <ui:Button
                            Margin="4,0,12,0"
                            Command="{Binding ViewModel.PageButtonClickCommand, Mode=OneWay}"
                            CommandParameter="PageUp"
                            Icon="{ui:SymbolIcon ChevronLeft24}"
                            IsEnabled="{Binding ViewModel.IsPageUpEnabled, Mode=OneWay}"
                            ToolTip="上一页" />
                        <ItemsControl ItemsSource="{Binding ViewModel.PageButtonList, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ui:Button
                                        Margin="4,0,0,0"
                                        Appearance="{Binding IsCurrentPage, Converter={StaticResource BoolToAppearanceConverter}}"
                                        Command="{Binding ElementName=DataGrid, Path=DataContext.ViewModel.GotoPageCommand, Mode=OneWay}"
                                        CommandParameter="{Binding Name, Mode=OneWay}"
                                        Content="{Binding Name, Mode=OneWay}"
                                        IsEnabled="{Binding IsEnabled, Mode=OneWay}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                        <ui:Button
                            Margin="16,0,0,0"
                            Command="{Binding ViewModel.PageButtonClickCommand, Mode=OneWay}"
                            CommandParameter="PageDown"
                            Icon="{ui:SymbolIcon ChevronRight24}"
                            IsEnabled="{Binding ViewModel.IsPageDownEnabled, Mode=OneWay}"
                            ToolTip="下一页" />
                    </StackPanel>
                    <StackPanel
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <ui:Flyout
                            VerticalAlignment="Center"
                            IsOpen="{Binding ViewModel.IsFlyoutOpen, Mode=TwoWay}"
                            Placement="Top">
                            <TextBlock
                                Width="200"
                                HorizontalAlignment="Center"
                                FontSize="18"
                                Text="{Binding ViewModel.FlyoutText, Mode=OneWay}"
                                TextWrapping="WrapWithOverflow" />
                        </ui:Flyout>
                        <ui:TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Text="前往" />
                        <ui:TextBox
                            x:Name="textBox"
                            Height="32"
                            Margin="4,0,4,0"
                            extensions:TextBoxAttachedProperties.IsOnlyNumber="True"
                            IsEnabled="{Binding ViewModel.IsBottombarEnabled, Mode=OneWay}"
                            PreviewKeyDown="PageBox_PreviewKeyDown"
                            Text="{Binding ViewModel.TargetPage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <ui:TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Text="页" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
