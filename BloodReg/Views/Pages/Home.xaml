<Page
    x:Class="BloodReg.Views.Pages.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BloodReg.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Home"
    d:DataContext="{d:DesignInstance Type=local:Home,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="630"
    d:DesignWidth="900"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2.8*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" CornerRadius="8,0,0,0">
            <Border.Background>
                <ImageBrush
                    ImageSource="pack://application:,,,/Assets/background.jpg"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Stretch="UniformToFill" />
            </Border.Background>
            <Grid>
                <StackPanel
                    Margin="48,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <ui:TextBlock
                        FontSize="48"
                        FontTypography="TitleLarge"
                        Foreground="#FFFFFF"
                        Text="献血信息登记系统">
                        <ui:TextBlock.Effect>
                            <DropShadowEffect
                                BlurRadius="12"
                                Direction="240"
                                ShadowDepth="4" />
                        </ui:TextBlock.Effect>
                    </ui:TextBlock>
                    <ui:TextBlock
                        FontTypography="Subtitle"
                        Foreground="#FFFFFF"
                        Text="Manage the blood donation information intelligently">
                        <TextBlock.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Direction="240"
                                ShadowDepth="3" />
                        </TextBlock.Effect>
                    </ui:TextBlock>
                    <ui:TextBlock
                        FontSize="16"
                        FontTypography="BodyStrong"
                        Foreground="#FFFFFF"
                        Text="by using BloodReg System everywhere.">
                        <TextBlock.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Direction="240"
                                ShadowDepth="3" />
                        </TextBlock.Effect>
                    </ui:TextBlock>
                </StackPanel>
                <ui:TextBlock
                    Margin="0,0,12,8"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    FontTypography="Caption"
                    Foreground="#57FFFFFF"
                    Text="Created by Zhao Yanglei" />
            </Grid>
        </Border>
        <Grid Grid.Row="1" Margin="16,16,16,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ui:CardAction
                Grid.Column="0"
                Margin="0,0,4,0"
                Padding="0"
                VerticalAlignment="Stretch"
                Command="{Binding ViewModel.CardClickCommand, Mode=OneWay}"
                CommandParameter="学生"
                IsChevronVisible="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ui:Image
                        Width="80"
                        Height="80"
                        Margin="32,0,0,0"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="pack://application:,,,/Assets/student.png"
                        Stretch="UniformToFill" />
                    <ui:TextBlock
                        Grid.Column="1"
                        Margin="24"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="32"
                        Text="学生" />
                </Grid>
            </ui:CardAction>
            <ui:CardAction
                Grid.Column="1"
                Margin="8,0,4,0"
                Padding="0"
                VerticalAlignment="Stretch"
                Command="{Binding ViewModel.CardClickCommand, Mode=OneWay}"
                CommandParameter="教职工"
                IsChevronVisible="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ui:Image
                        Width="80"
                        Height="80"
                        Margin="32,0,0,0"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="pack://application:,,,/Assets/teacher.png"
                        Stretch="UniformToFill" />
                    <ui:TextBlock
                        Grid.Column="1"
                        Margin="14"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="32"
                        Text="教职工" />
                </Grid>
            </ui:CardAction>
        </Grid>
        <Grid Grid.Row="2" Margin="16,8,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ui:CardAction
                Grid.Column="0"
                Margin="0,0,4,0"
                Padding="0"
                VerticalAlignment="Stretch"
                Command="{Binding ViewModel.CardClickCommand, Mode=OneWay}"
                CommandParameter="留学生"
                IsChevronVisible="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ui:Image
                        Width="70"
                        Height="70"
                        Margin="36,0,0,0"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="pack://application:,,,/Assets/Internationalstudent.png"
                        Stretch="UniformToFill" />
                    <ui:TextBlock
                        Grid.Column="1"
                        Margin="29,20,24,20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="32"
                        Text="留学生" />
                </Grid>
            </ui:CardAction>
            <ui:CardAction
                Grid.Column="2"
                Margin="8,0,0,0"
                Padding="0"
                VerticalAlignment="Stretch"
                Command="{Binding ViewModel.CardClickCommand, Mode=OneWay}"
                CommandParameter="校外人员"
                IsChevronVisible="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ui:Image
                        Width="74"
                        Height="74"
                        Margin="32,4,0,0"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="pack://application:,,,/Assets/outsidepeople.png"
                        Stretch="UniformToFill" />
                    <ui:TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="32"
                        Text="校外人员" />
                </Grid>
            </ui:CardAction>
        </Grid>
    </Grid>
</Page>
